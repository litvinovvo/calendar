.input
	&_text
		display inline-block
		font-size 14px
		-webkit-appearance: none

		+below(750px)
			width 100%

		padding 8px 12px
		width 250px
		border-top 1px solid input-border-color
		border-bottom 1px solid input-border-color
		border-left 1px solid input-border-color
		border-right 1px solid input-border-color
		border-radius 3px
		box-shadow inset 0 0 3px rgba(0, 0, 0, .5)

		&.error
			box-shadow inset 0 0 3px rgb(255, 31, 17)

		&:focus, &:hover
			box-shadow inset 0 0 3px rgb(26, 155, 255)

	&__label
		margin-bottom 8px
		display block
		font-size 14px

		&.error
			color #dc5252

		&.success
			color #2bbd2b

		&.hide
			display none

