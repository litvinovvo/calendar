.btn
	padding 8px 12px
	display inline
	color black
	background-color white
	border 1px solid gray-color
	border-radius 3px
	box-shadow 0 0 5px rgba(0, 0, 0, .2)

	&:hover, &:focus
		border-color rgba(26, 155, 255, .5)

	&:active
		background-image linear-gradient(rgba(0, 0, 0, .1), rgba(0, 0, 0, 0))
		box-shadow inset 0 .075rem .1rem rgba(0, 0, 0, .2)

	&_primary
		text-shadow 0 1px 3px rgba(0, 0, 0, .5)
		color white
		background-color primary-color
		border none
		box-shadow 0 1px 3px rgba(0, 0, 0, .5)

	&_sm
		padding 5px 10px
		font-size 14px
		border-radius 6px

	.icon
		display block

