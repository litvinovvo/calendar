.calendar-search
    &__input-container
        position relative
        display inline-block

        +below(750)
            width calc(100% - 30px)

    &__icon
        margin-right 10px

    &__item-container
        overflow-x hidden
        overflow-y auto
        max-height 200px

    &__input
        box-sizing border-box !important

    &__list
        position absolute
        z-index 100
        top 50px
        padding 10px
        width 100%
        background-color white
        border-radius 0 0 3px 3px

        ^[1]::before
            position absolute
            z-index 200
            top 0
            right auto
            left 50%
            bottom auto
            width 15px
            height 15px
            content ''
            background-color inherit
            box-shadow -3px -3px 5px rgba(0, 0, 0, .15)
            transform translateX(-50%) translateY(-50%) rotate(45deg)

    &__item
        padding 5px
        cursor pointer
        border-bottom 1px solid #e0e0e0

    &__item:hover
        color white
        background-color #33a6ff

        .search-item__date
            color white

    &__item:last-child
        border-bottom none

    .search-item
        &__title
            margin-top 10px
            margin-bottom 5px
            font-size 16px
            font-weight bold

        &__date
            margin-bottom 10px
            font-size 12px
            color #808080
